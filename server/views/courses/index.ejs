<%- include('../partials/pageSubheader.ejs', { pageTitle: currentLesson ? currentLesson.title : course.title,
    preTitleText: currentLesson ? "Now viewing:" : "Course:" , showSidebarToggle: true, user })%>

    <%- include('../partials/courseSidebar', { course, currentLesson, user }) %>

        <main class="with-sidebar">

            <div class="course-layout" style="display: flex;">

                <div class="course-content" style="flex: 1; padding: 20px;">

                    <% if (currentLesson) { %>
                        <%- include('lesson', { lesson: currentLesson }) %>
                            <% } else { %>
                                <h2>
                                    <%= course.title %>
                                </h2>
                                <p>
                                    <%= course.description %>
                                </p>
                                <p>Select a lesson from the sidebar to begin.</p>
                                <% } %>
                </div>
            </div>
        </main>