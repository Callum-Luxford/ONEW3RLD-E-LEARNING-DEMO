<div class="auth-container">
    <div class="auth-box">
        <img src="/images/rsa-logo.png" alt="RSA UAE Logo" class="auth-logo">

        <form method="POST" action="/auth/register">
            <input type="text" name="fullName" id="fullName" placeholder="Full Name" required />
            <input type="text" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>

            <div class="auth-terms">
                <input type="checkbox" id="terms" name="terms" required>
                <label for="terms">Terms & Conditions</label>
            </div>

            <button type="submit" class="auth-submit-button">Register</button>
        </form>

        <!-- ADD LATER -->
        <!-- <button class="face-login">
            <i class="icon-camera"></i> Face Recognition
        </button> -->

        <p class="change-auth-link">Already have an account? <a href="/auth/login">Login</a></p>
    </div>
</div>